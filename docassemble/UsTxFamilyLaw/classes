"""
classes.py - Classes introduced by UsTxFamilyLaw
"""
from datetime import date
from docassemble.base.util import DAObject

class BankAccount(DAObject):
    """A bank account"""
    def init(self, *pargs, **kwargs):
        super().init(*pargs, **kwargs)
        self.initializeAttribute('short_name', '')
        self.initializeAttribute('institution_name', '')
        self.initializeAttribute('account_number', '')
        self.initializeAttribute('account_type', '')
        self.initializeAttribute('current_balance', 0.00)
        self.initializeAttribute('balance_as_of_date', date.today())
        self.initializeAttribute('names_account', '')
        self.initializeAttribute('sp_claimant', '')

    def short_name(self):
        if self.short_name:
            return self.short_name
        return f'{self.institution_name} {self.account_number[-4:]}'
